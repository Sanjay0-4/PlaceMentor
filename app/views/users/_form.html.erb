<%= render 'shared/errors', obj: @user %>

<div class="row">
    <div class = "col-md-6 col-md-offset-3 well" style="background-color: rgba(245, 245, 245, 0.3);">
        <% if @user.new_record? %>
        <strong><h3 class="text-center">Register Your Account</h3></strong>
        <% else %>
        <strong><h3 class="text-center">Edit Your Account</h3></strong>
        <% end %>
           <br><br>
        <%= form_for @user do |f| %>
         <%= f.label :userName %>  <%= f.text_field :username %>
         <%= f.label :email %> <%= f.email_field :email %>
         <%= f.label :phoneNumber %>  <%= f.text_field :phone %>
         <%= f.label :password %> <%= f.password_field :password ,rows: 10%>
         <%= f.label :branch %> <%= f.select :branch_id, Branch.all.collect {|c| [ c.name, c.id ] } %>
         <%= f.submit(@user.new_record? ? 'Register' : 'Edit Profile',class: "btn btn-success") %>
        <% end %>
    </div>
</div>